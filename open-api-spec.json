{
  "openapi": "3.0.3",
  "info": {
    "title": "Contact and Appointment Management API",
    "description": "API for managing contacts and appointments",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://agenda-ai.deno.dev/api/v1",
      "description": "Production server"
    }
  ],
  "paths": {
    "/public/chat": {
      "post": {
        "operationId": "startChat",
        "summary": "Start a chat",
        "parameters": [
          {
            "name": "x-channel",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The channel ID of the user"
          },
          {
            "name": "x-user-id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the user"
          },
          {
            "name": "x-sender-name",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The name of the sender"
          },
          {
            "name": "x-sender-channel",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The channel of the sender"
          }
        ],
        "responses": {
          "200": {
            "description": "Chat started successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "sender": {
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string"
                            },
                            "id": {
                              "type": "string"
                            },
                            "name": {
                              "type": "string"
                            },
                            "phone": {
                              "type": "string"
                            },
                            "appointments": {
                              "type": "array",
                              "items": {
                                "$ref": "#/components/schemas/Appointment"
                              }
                            }
                          }
                        },
                        "account": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "name": {
                              "type": "string"
                            },
                            "phone": {
                              "type": "string"
                            },
                            "email": {
                              "type": "string"
                            },
                            "plan": {
                              "type": "string"
                            },
                            "services": {
                              "type": "array",
                              "items": {
                                "$ref": "#/components/schemas/Service"
                              }
                            },
                            "availableHours": {
                              "type": "object",
                              "additionalProperties": {
                                "type": "array",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "start": {
                                      "type": "string"
                                    },
                                    "end": {
                                      "type": "string"
                                    }
                                  }
                                }
                              }
                            },
                            "stripeCurrentPeriodEnd": {
                              "type": "string"
                            },
                            "stripeCurrentPeriodStart": {
                              "type": "string"
                            },
                            "stripeSubscriptionStatus": {
                              "type": "string"
                            },
                            "createdAt": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Channel ID is required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
