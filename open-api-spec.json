    "/billing/plan": {
      "get": {
        "operationId": "getUserPlan",
        "summary": "Get the current subscription plan of the user",
        "responses": {
          "200": {
            "description": "Current subscription plan retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "plan": {
                      "type": "string"
                    },
                    "subscriptionStatus": {
                      "type": "string"
                    },
                    "currentPeriodStart": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "stripeCurrentPeriodEnd": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User or plan not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/billing/checkout": {
      "post": {
        "operationId": "createCheckoutSession",
        "summary": "Create a new checkout session",
        "responses": {
          "200": {
            "description": "Checkout session created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "hasSubscription": {
                      "type": "boolean"
                    },
                    "checkoutUrl": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/billing/manage": {
      "get": {
        "operationId": "createPortalSession",
        "summary": "Create a new portal session for managing billing",
        "responses": {
          "200": {
            "description": "Portal session created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "hasSubscription": {
                      "type": "boolean"
                    },
                    "manageUrl": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/users/identity": {
      "get": {
        "operationId": "identifyUser",
        "summary": "Identifies the user based on the x-channel number",
        "parameters": [
          {
            "name": "x-channel",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The channel ID of the user"
          },
          {
            "name": "x-user-id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the user"
          },
          {
            "name": "x-sender-name",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The name of the sender"
          },
          {
            "name": "x-sender-channel",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The channel of the sender"
          }
        ],
        "responses": {
          "200": {
            "description": "User found, it's an admin",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Channel ID is required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User not found, it's a customer of user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "contact": {
                      "$ref": "#/components/schemas/Contact"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/available-hours": {
      "put": {
        "operationId": "updateAvailableHours",
        "summary": "Update the available hours for a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "availableHours": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "start": {
                            "type": "string"
                          },
                          "end": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Available hours updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "400": {
